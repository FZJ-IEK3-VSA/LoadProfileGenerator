 <!-- "SimpleComboBox"
 Verwendet das ComboBoxToggleButton-Element zum Erweitern und Reduzieren eines Popup-Steuerelements.
 "SimpleScrollViewer" für den Bildlauf in Elementen und "SimpleComboBoxItem" zum Definieren der Darstellung der einzelnen Elemente.
 Mit dem Popup-Element wird eine Liste mit Elementen in einem StackPanel-Element angezeigt.-->

 <Style x:Key="SimpleComboBox" TargetType="{x:Type ComboBox}">
  <Setter Property="SnapsToDevicePixels" Value="true"/>
  <Setter Property="Template">
   <Setter.Value>
    <ControlTemplate TargetType="{x:Type ComboBox}">
     <Grid>
      <!-- Das ToggleButton-Element ist zum Umschalten der IsDropDownOpen-Eigenschaft direkt an die Daten des ComboBox-Elements gebunden.  -->
      <ToggleButton  Template="{DynamicResource ComboBoxToggleButton}" x:Name="ToggleButton" Focusable="false" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press"/>
      <ContentPresenter HorizontalAlignment="Left" Margin="3,3,23,3" x:Name="ContentSite" VerticalAlignment="Center" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" IsHitTestVisible="False"/>

      <!-- Das TextBox-Element muss "PART_EditableTextBox" genannt werden, um vom ComboBox-Element erkannt zu werden. -->
      <TextBox Visibility="Hidden" Template="{DynamicResource ComboBoxTextBox}" HorizontalAlignment="Left" Margin="3,3,23,3" x:Name="PART_EditableTextBox" Style="{x:Null}" VerticalAlignment="Center" Focusable="True" Background="Transparent" IsReadOnly="{TemplateBinding IsReadOnly}"/>

      <!-- Das Popup-Element zeigt die Liste der Elemente im ComboBox-Element an. "IsOpen" ist an die Daten der IsDropDownOpen-Eigenschaft, die über das ComboBoxToggleButton-Element umgeschaltet wird, gebunden. -->
      <Popup IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom" x:Name="Popup" Focusable="False" AllowsTransparency="True" PopupAnimation="Slide">
       <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}" MinWidth="{TemplateBinding ActualWidth}" x:Name="DropDown" SnapsToDevicePixels="True">
        <Border x:Name="DropDownBorder" Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource SolidBorderBrush}" BorderThickness="1"/>
        <ScrollViewer Margin="4,6,4,6" Style="{DynamicResource SimpleScrollViewer}" SnapsToDevicePixels="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="True">

         <!-- Mit dem StackPanel-Element werden die untergeordneten Elemente angezeigt, indem "IsItemsHost" auf "True" festgelegt wird. -->
         <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>

        </ScrollViewer>
       </Grid>
      </Popup>
     </Grid>
     <ControlTemplate.Triggers>
      <!-- Erzwingt bei einem leeren DropDown-Element eine Mindestgröße. -->
      <Trigger Property="HasItems" Value="false">
       <Setter Property="MinHeight" Value="95" TargetName="DropDownBorder"/>
      </Trigger>
      <Trigger Property="IsEnabled" Value="false">
       <Setter Property="Foreground" Value="{DynamicResource DisabledForegroundBrush}"/>
      </Trigger>
      <Trigger Property="IsGrouping" Value="true">
       <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
      </Trigger>
      <Trigger Property="AllowsTransparency" SourceName="Popup" Value="true">
       <Setter Property="CornerRadius" Value="4" TargetName="DropDownBorder"/>
       <Setter Property="Margin" Value="0,2,0,0" TargetName="DropDownBorder"/>
      </Trigger>
      <Trigger Property="IsEditable" Value="true">
       <Setter Property="IsTabStop" Value="false"/>
       <Setter Property="Visibility" Value="Visible" TargetName="PART_EditableTextBox"/>
       <Setter Property="Visibility" Value="Hidden" TargetName="ContentSite"/>
      </Trigger>
     </ControlTemplate.Triggers>
    </ControlTemplate>
   </Setter.Value>
  </Setter>
 </Style>

 <!-- "SimpleComboBoxItem" - Wird für alle Elemente im ComboBox-Element verwendet. Sie können die ausgewählte Farbe für jedes untere Element ändern.-->
 <Style x:Key="SimpleComboBoxItem" d:IsControlPart="True" TargetType="{x:Type ComboBoxItem}">
